<%- include('static/head.ejs', { bot,user,path}) %>
<div id="content" class="main-content">
    <br><br><br><br><br><br>
    <div class="container">

      
      <form method="POST">
        <div class="form-row mb-4">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Code Name<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="codename" name="codename" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Code Description<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="codedesc" name="codedesc" maxlength="100" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Code Category<span style="color:red">*</span></label>
                <select id="category" name="category" class="form-control" required>
                    <option value="javascript">Javascript</option>
                    <option value="bdfd">BDFD</option>
                    <option value="altyapı">Altyapı</option>
                    <option value="html">Aoijs-V5</option>
                    <option value="aoijs">Aoi.JS-V4</option>
                </select>
            </div>
         </div>
        <div class="form-group mb-4">
            <label for="inputAddress">Main (Optional)</label>
            <textarea type="text" class="form-control" id="main" name="main"></textarea>
        </div>
         <div class="form-group">
            <label for="inputEmail4">Command (Optional)</label>
            <textarea type="text" class="form-control" id="commands" name="commands"></textarea>
        </div>
      <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-save"></i> Submit</button>
    </form>
</div>
<%- include('static/foot.ejs', { bot,user,path}) %>
  </div>
  